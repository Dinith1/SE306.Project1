   <children>
      <VBox alignment="TOP_CENTER" style="-fx-background-color: #2E2C2F;">
         <children>
            <HBox prefHeight="400.0" prefWidth="1200.0">
               <children>
                  <VBox prefHeight="733.0" prefWidth="635.0">
